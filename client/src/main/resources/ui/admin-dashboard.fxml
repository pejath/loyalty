<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"
      fx:controller="main.java.com.clubloyalty.client.view.AdminDashboardController"
      spacing="12" alignment="TOP_LEFT">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Admin Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Signed in as:"/>
        <Label fx:id="welcomeLbl" text="-"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Back to Client" onAction="#onClient"/>
        <Button text="Logout" onAction="#onLogout"/>
    </HBox>

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab fx:id="usersTab" text="Users">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="System Users" style="-fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <TextField fx:id="userSearchField" promptText="Search username..." HBox.hgrow="ALWAYS"/>
                        <Button text="Search" onAction="#onSearchUsers"/>
                    </HBox>
                    <ListView fx:id="usersList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Refresh" onAction="#onRefreshUsers"/>
                        <Button text="Create" onAction="#onCreateUser"/>
                        <Button text="Toggle Enabled" onAction="#onToggleUser"/>
                        <Button text="Reset Password" onAction="#onResetPassword"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="membersTab" text="Members">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Members" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="membersList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Refresh" onAction="#onRefreshMembers"/>
                        <Button text="Edit" onAction="#onEditMember"/>
                        <Button text="Adjust Points" onAction="#onAdjustMemberPoints"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="rewardsTab" text="Rewards">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Rewards Catalogue" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="rewardsList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Refresh" onAction="#onRefreshRewards"/>
                        <Button text="Add" onAction="#onAddReward"/>
                        <Button text="Edit" onAction="#onEditReward"/>
                        <Button text="Toggle Active" onAction="#onToggleReward"/>
                        <Button text="Delete" onAction="#onDeleteReward"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="transactionsTab" text="Transactions">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Point Transactions" style="-fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="Member ID:"/>
                        <TextField fx:id="txMemberFilter" promptText="optional" maxWidth="120"/>
                        <Label text="Type:"/>
                        <ComboBox fx:id="txType" promptText="All" maxWidth="110"/>
                        <Label text="From:"/>
                        <DatePicker fx:id="txFrom"/>
                        <Label text="To:"/>
                        <DatePicker fx:id="txTo"/>
                        <Button text="Refresh" onAction="#onRefreshTransactions"/>
                        <Button text="Reset Filters" onAction="#onResetTransactions"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label fx:id="txPageLabel" text="Page 1"/>
                        <Button fx:id="txPrevBtn" text="Prev" onAction="#onTxPrev"/>
                        <Button fx:id="txNextBtn" text="Next" onAction="#onTxNext"/>
                    </HBox>
                    <ListView fx:id="transactionsList" prefHeight="220"/>
                </VBox>
            </Tab>
            <Tab fx:id="reportsTab" text="Reports">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Insights" style="-fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="From:"/>
                        <DatePicker fx:id="reportFrom"/>
                        <Label text="To:"/>
                        <DatePicker fx:id="reportTo"/>
                        <Button text="Refresh" onAction="#onRefreshReport"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label text="Range:"/>
                        <Label fx:id="reportRangeLbl" text="All time" style="-fx-font-weight: bold;"/>
                    </HBox>
                    <GridPane hgap="16" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                        </columnConstraints>
                        <children>
                            <VBox alignment="CENTER" spacing="4">
                                <Label text="Members"/>
                                <Label fx:id="reportMembersLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="1">
                                <Label text="Active Members"/>
                                <Label fx:id="reportActiveLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="2">
                                <Label text="Transactions"/>
                                <Label fx:id="reportTxLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="3">
                                <Label text="Net Points"/>
                                <Label fx:id="reportPointsLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="4">
                                <Label text="Avg tx / active"/>
                                <Label fx:id="reportAvgLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                        </children>
                    </GridPane>
                    <HBox spacing="16">
                        <VBox spacing="6" alignment="TOP_LEFT" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                            <Label text="Transactions by type" style="-fx-font-weight: bold;"/>
                            <ListView fx:id="reportTypeList" prefHeight="160"/>
                        </VBox>
                        <VBox spacing="6" alignment="TOP_LEFT" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                            <Label text="Top rewards" style="-fx-font-weight: bold;"/>
                            <ListView fx:id="reportRewardsList" prefHeight="160"/>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="promotionsTab" text="Promotions">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Scheduled Promotions" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="promotionsList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Refresh" onAction="#onRefreshPromotions"/>
                        <Button fx:id="promotionsCreateBtn" text="Create" onAction="#onCreatePromotion"/>
                    </HBox>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>
</VBox>

