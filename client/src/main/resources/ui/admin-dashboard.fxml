<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"
      fx:controller="main.java.com.clubloyalty.client.view.AdminDashboardController"
      spacing="12" alignment="TOP_LEFT">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Панель администратора" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Вы вошли как:"/>
        <Label fx:id="welcomeLbl" text="-"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="В клиент" onAction="#onClient"/>
        <Button text="Выход" onAction="#onLogout"/>
    </HBox>

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab fx:id="usersTab" text="Пользователи">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Пользователи системы" style="-fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <TextField fx:id="userSearchField" promptText="Поиск по нику..." HBox.hgrow="ALWAYS"/>
                        <Button text="Поиск" onAction="#onSearchUsers"/>
                    </HBox>
                    <ListView fx:id="usersList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Обновить" onAction="#onRefreshUsers"/>
                        <Button text="Создать" onAction="#onCreateUser"/>
                        <Button text="Вкл/Выкл" onAction="#onToggleUser"/>
                        <Button text="Восстановить пароль" onAction="#onResetPassword"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="membersTab" text="Участники">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Участники" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="membersList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Обновить" onAction="#onRefreshMembers"/>
                        <Button text="Изменить" onAction="#onEditMember"/>
                        <Button text="Изменить баллы" onAction="#onAdjustMemberPoints"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="rewardsTab" text="Награды">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Каталог наград" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="rewardsList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Обновить" onAction="#onRefreshRewards"/>
                        <Button text="Добавить" onAction="#onAddReward"/>
                        <Button text="Изменить" onAction="#onEditReward"/>
                        <Button text="Вкл/Выкл" onAction="#onToggleReward"/>
                        <Button text="Удалить" onAction="#onDeleteReward"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="transactionsTab" text="Транзакции">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Транзакции балов" style="-fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ID Участника:"/>
                        <TextField fx:id="txMemberFilter" promptText="optional" maxWidth="120"/>
                        <Label text="Тип:"/>
                        <ComboBox fx:id="txType" promptText="All" maxWidth="110"/>
                        <Label text="С:"/>
                        <DatePicker fx:id="txFrom"/>
                        <Label text="По:"/>
                        <DatePicker fx:id="txTo"/>
                        <Button text="Обновить" onAction="#onRefreshTransactions"/>
                        <Button text="Сбросить фильтры" onAction="#onResetTransactions"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label fx:id="txPageLabel" text="Страница 1"/>
                        <Button fx:id="txPrevBtn" text="Назад" onAction="#onTxPrev"/>
                        <Button fx:id="txNextBtn" text="Вперед" onAction="#onTxNext"/>
                    </HBox>
                    <ListView fx:id="transactionsList" prefHeight="220"/>
                </VBox>
            </Tab>
            <Tab fx:id="reportsTab" text="Отчеты">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Показатели" style="-fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="С:"/>
                        <DatePicker fx:id="reportFrom"/>
                        <Label text="По:"/>
                        <DatePicker fx:id="reportTo"/>
                        <Button text="Обновить" onAction="#onRefreshReport"/>
                        <Button text="Сбросить" onAction="#onResetReport"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label text="Период:"/>
                        <Label fx:id="reportRangeLbl" text="За все время" style="-fx-font-weight: bold;"/>
                    </HBox>
                    <GridPane hgap="16" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                        </columnConstraints>
                        <children>
                            <VBox alignment="CENTER" spacing="4">
                                <Label text="Участнии"/>
                                <Label fx:id="reportMembersLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="1">
                                <Label text="Активные участнии"/>
                                <Label fx:id="reportActiveLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="2">
                                <Label text="Транзакции"/>
                                <Label fx:id="reportTxLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="3">
                                <Label text="Чистые баллы"/>
                                <Label fx:id="reportPointsLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="4" GridPane.columnIndex="4">
                                <Label text="Средн. транзакций/активн."/>
                                <Label fx:id="reportAvgLbl" text="0"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                        </children>
                    </GridPane>
                    <HBox spacing="16">
                        <VBox spacing="6" alignment="TOP_LEFT" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                            <Label text="Объем транзакций" style="-fx-font-weight: bold;"/>
                            <LineChart fx:id="reportDailyChart" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" legendVisible="false">
                                <xAxis>
                                    <CategoryAxis label="Дата"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Поинты"/>
                                </yAxis>
                            </LineChart>
                        </VBox>
                        <VBox spacing="6" alignment="TOP_LEFT" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                            <Label text="Топ наград" style="-fx-font-weight: bold;"/>
                            <BarChart fx:id="reportRewardsChart" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" legendVisible="false">
                                <xAxis>
                                    <CategoryAxis label="Награды"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Покупки"/>
                                </yAxis>
                            </BarChart>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>
            <Tab fx:id="promotionsTab" text="Акции">
                <VBox spacing="8" alignment="TOP_LEFT">
                    <Label text="Запланированные акции" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="promotionsList" prefHeight="220"/>
                    <HBox spacing="8">
                        <Button text="Обновить" onAction="#onRefreshPromotions"/>
                        <Button fx:id="promotionsCreateBtn" text="Создать" onAction="#onCreatePromotion"/>
                    </HBox>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>
</VBox>

