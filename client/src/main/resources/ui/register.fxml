<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      fx:controller="main.java.com.clubloyalty.client.view.RegisterController">
    <children>
        <Label text="Registration"/>
        <TextField fx:id="username" promptText="Username"/>
        <PasswordField fx:id="password" promptText="Password"/>
        <TextField fx:id="fullName" promptText="Full name"/>
        <TextField fx:id="phone" promptText="Phone (or ID)"/>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Register" onAction="#onRegister"/>
                <Button text="Back" onAction="#back"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
